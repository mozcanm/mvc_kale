
@{
    Layout = null;
}

@model IEnumerable<MaliViewModel>
<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <link href="~/scripts/w3.css" rel="stylesheet" />
    <link rel="shortcut icon" href="~/img/logo.ico" type="image/x-icon">
    <link rel="icon" href="~/img/logo.ico" type="image/x-icon">
    <title>Borçlarım / Kale Dekor ve Mobilya</title>
    <style>
        a {
            text-decoration: none;
        }

        table {
            font-family: arial, sans-serif;
            border-collapse: collapse;
            width: 100%;
        }

        td {
            border: 0px solid #dddddd;
            text-align: left;
            padding: 3px;
        }


        tr:nth-child(even) {
            background-color: #dddddd;
        }

        tr:hover {
            background-color: #FDFFC9;
        }
    </style>
</head>
<body>
    <div class="w3-top w3-hide-medium  w3-hide-small">
        <div class="w3-row w3-bar w3-indigo w3-card" style="height:35px;">
            <div class="w3-col" style="width:4%">
                <div class="w3-center">
                    <a href="javascript: history.go(-1)"><img src="~/img/back1.png" alt="LİSTE" /></a> <a href="" onclick="window.print()"><img src="~/img/print3.png" alt="YAZDIR" /></a>
                </div>
            </div>
            
            <div class="w3-col" style="width:33%">
                <div class="w3-left-align">
                    <b>AD</b>
                </div>
            </div>
            <div class="w3-col" style="width:18%">
                <div class="w3-left-align">
                    <b>TELEFON</b>
                </div>
            </div>
            <div class="w3-col" style="width:15%">
                <div class="w3-right-align">
                    <b>BAKİYE</b>
                </div>
            </div>
            <div class="w3-col" style="width:15%">
                <div class="w3-right-align">
                    <b>ÖDENDİ</b>
                </div>
            </div>
            <div class="w3-col" style="width:15%">
                <div class="w3-right-align">
                    <b>KALAN</b>
                </div>
            </div>
        </div>
    </div>
    <br /><br />
    <table>
        <tr class="w3-hide-large">
            <th style="width: 4%; text-align:center">NO</th>
            <th style="width:33%; text-align:left">AD</th>
            <th style="width:18%; text-align:left">TELEFON</th>
            <th style="width:15%; text-align:right">BAKİYE</th>
            <th style="width:15%; text-align:right">ÖDENDİ</th>
            <th style="width:15%; text-align:right">KALAN</th>
        </tr>

        @{int no = 0; decimal borcToplam = 0;}
        @foreach (var item in Model)
        {
            if (item.mBorcum != 0)
            {
                no++;
                borcToplam += item.mBorcum;
                <tr>
                    <td style="width:4%; text-align:center">@no.ToString()</td>
                    <td style="width:33%"><a href="~/Cari/Cari/@item.mKisiID">@item.mAd</a></td>
                    <td style="width:18%">@item.mTelefon</td>
                    <td style="width:15%; text-align:right">@string.Format("{0:N}\n", item.mBakiye)</td>
                    <td style="width:15%; text-align:right">@string.Format("{0:N}\n", item.mOdendi)</td>
                    <td style="width:15%; text-align:right">@string.Format("{0:N}\n", item.mBorcum)</td>
                </tr>
            }
        }
        <tr>
            <td style="width:4%"></td>
            <td style="width:33%"></td>
            <td style="width:18%"></td>
            <td style="width:15%"></td>
            <td style="width:15%; text-align:right"><b>TOPLAM: </b></td>
            <td style="width:15%; text-align:right"><b>@string.Format("{0:N}\n", borcToplam)</b></td>
        </tr>
    </table>
    <script>
        function goBack() {
            window.history.back();
        }
    </script>
</body>
</html>
